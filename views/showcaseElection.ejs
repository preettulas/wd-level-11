<html>
  <head>
    <title>Election preview</title>
    <meta name="csrf-token" content="<%= csrf %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-200">
    <div class="my-2 mx-5">
        <div class="flex justify-center">
            <div>
                <b>
                    <h1 class="text-3xl font-semibold hover:italic">Preview Election</h1>
                </b>
            </div>
        </div><br>
        <b>
          <a href="/election"><span class="text-white bg-red-600 hover:bg-red-800 font-medium justify-center rounded px-3 py-1">Go Back</a></span>
        </b>
        <br>
        <br>
        <div class="bg-gray-lighter min-h-screen flex flex-col">
            <div class="container max-w-sm mx-auto flex-1 flex flex-col justify  px-2">
                <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
        <div class="py-3">
          <div>
            <% for (let i=0; i<questions.length; i++) { %>
                <div>
                    <p class="font-bold text">Question <%= i+1 %> : <%= questions[i].questionName %></p>
                    <p class="font-semibold text-gray-600">Description : <%= questions[i].desc %></p>
                    <div class="pt-3 pl-5">
                        <% for (let j=0; j<options[i].length; j++) { %>
                          <div class="flex gap-2">
                            <input
                                class="border-2 flex items-center border-black p-2"
                                id="<%= questions[i].id %>-<%= options[i][j].id %>"
                                type="radio"
                                value="<%= options[i][j].id %>"
                                name="<%= questions[i].id %>"
                            />
                            <label for="<%= questions[i].id %>-<%= options[i][j].id %>"><%= options[i][j].optionName %></label>
                          </div>
                        <% } %>
                    </div>
                </div>
            <% } %>
           </div>
        </div>    
        <% if(messages && messages.error && messages.error.length > 0)  { %>
            <% for(var i=0; i<messages.error.length; i++) { %>
              <p class="bg-red-200 my-3 list-none rounded px-4 py-2"><%= messages.error[i] %></p>
            <% } %>
          <% } %>
        </div>
    </div>
  </body>
</html>
