<html>

<head>
  <title>Modify Voters</title>
  <meta name="csrf-token" content="<%= csrf %>" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-200">
  <div class="bg-grey-lighter min-h-screen flex flex-col"><br>
    <br>
    <br>
    <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify   px-2">
      <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
        <h1 class="mb-8 text-3xl text-left">Edit Voters Password</h1>
        <form action="/election/<%= election.id %>/voter/<%= voter.id %>/edit" method="post">
          <input type="hidden" name="_csrf" value="<%= csrf %>">
          <div class="py-3">
            <label for="password">New Password:</label>
            <input type="text" name="password" value="<%=voter.password%>" placeholder="New Password"
              class="border border-gray-300 text-gray-900 rounded p-2 w-full">
          </div>
          <div class="py-3">
            <button type="submit"
              class="text-white bg-green-600 hover:bg-green-800 font-medium rounded px-5 py-2">Update</button>
          </div>
          <div class="py-3">
            <a href="/voters/<%=election.id%>"
              class="text-white bg-red-600 hover:bg-red-800 font-medium rounded px-5 py-2">Cancel</a>
          </div>
        </form>
        <% if(messages && messages.error && messages.error.length> 0) { %>
          <% for(var i=0; i<messages.error.length; i++) { %>
            <p class="bg-red-200 my-3 list-none rounded px-4 py-2">
              <%= messages.error[i] %>
            </p>
            <% } %>
              <% } %>
      </div>
    </div>
  </div>
</body>

</html>
