<html>

<head>
  <title>Edit Question</title>
  <meta name="csrf-token" content="<%= csrf %>" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>


<body class="bg-gray-200">
  <div class="my-2 mx-5">
    <div class="flex justify-center">
      <div>
        <b>
          <h1 class="text-3xl font-semibold">Edit Question</h1>
        </b>
      </div>
    </div>
    <br>
    <div class="bg-gray-lighter min-h-screen flex flex-col">
      <div class="container max-w-sm mx-auto flex-1 flex flex-col justify  px-2">
        <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
          <form action="/election/<%=election.id%>/questions/<%=question.id%>/edit" method="post">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <div class="py-3">
              <label for="questionName" class="font-semibold">Question:</label>
              <input type="text" name="questionName" value="<%= question.questionName %>" placeholder="Question Name"
                class="block border border-gray-light w-full p-2 rounded mb-3">
            </div>
            <div class="py-3">
              <label for="desc" class="font-semibold">Description:</label>
              <input type="text" name="desc" value="<%= question.desc %>" placeholder="Description"
                class="block border border-gray-light w-full p-2 rounded mb-3">
            </div>
            <div class="flex gap-2 py-2 justify-center">
              <div
                class="text-white bg-green-600 hover:bg-green-800 font-medium rounded shadow hover:shadow-md px-5 py-2">
                <button type="submit">Update</button>
              </div>
              <div
                class="text-white bg-red-600 hover:bg-red-800 font-medium rounded shadow hover:shadow-md px-5 py-2">
                <a href="/questions/<%= election.id%>" type="reset">Cancel</a>
              </div>
            </div>
          </form>
          <% if(messages && messages.error && messages.error.length> 0) { %>
            <% for(var i=0; i<messages.error.length; i++) { %>
              <p class="bg-red-200 my-3 list-none rounded px-4 py-2">
                <%= messages.error[i] %>
              </p>
              <% } %>
                <% } %>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
